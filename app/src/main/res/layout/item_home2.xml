<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/itemImvSuperPrice"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/timings" />

    <Button
        android:id="@+id/itemBtnTime"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/itemImvSuperPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:background="@drawable/shape_edit_text"
        android:backgroundTint="@color/button"
        android:padding="10dp"
        android:text="7:30:90" />

    <TextView
        android:id="@+id/itemTvPrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemBtnTime"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/itemBtnTime"
        android:layout_marginTop="29dp"
        android:text="Super Prise"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/itemTvAmount"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/itemBtnTime"
        android:layout_alignRight="@+id/itemBtnTime"
        android:layout_below="@+id/itemTvPrise"
        android:paddingLeft="5dp"
        android:text="6 569 720 sum"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
