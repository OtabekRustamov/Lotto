<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_omad_lotto"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemIvOmadLotto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notifications_white_24dp"
                android:tint="@color/Yellow" />

            <TextView
                android:id="@+id/itemTvOmadLotto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Result of Teraj"
                android:textColor="@color/nearblack"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/shape_omad_lotto"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemOne"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="#000" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/nearblack" />

                <TextView
                    android:id="@+id/itemTwo"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="20"
                    android:gravity="center"
                    android:textColor="#000" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/nearblack" />

                <TextView
                    android:id="@+id/itemThree"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="#000" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/nearblack" />

                <TextView
                    android:id="@+id/itemFour"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="#000" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/nearblack" />

                <TextView
                    android:id="@+id/itemFive"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="20"
                    android:textColor="#000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.4" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSuperPrize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

            <TextView
                android:id="@+id/itemTvSuperPrize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:lineSpacingExtra="1dp"
                android:text="The combination that brought the biggest win in the history of the game"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:id="@+id/itemBntPress"
                android:background="@drawable/button_shapetwo"
                android:backgroundTint="@color/Yellow"
                android:text="Press"
                android:textColor="@color/black" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>


</LinearLayout>